% Blackboard font
\newcommand{\bb}[1]{\mathbb{{#1}}}

% Field characteristic
\newcommand{\fieldchar}[1]{\operatorname{char}{{#1}}}

% Isomorphic mapping
\newcommand{\isomap}{\stackrel{\sim}{\longmapsto}}

% Generated group/ideal
\newcommand{\gen}[1]{\langle {#1} \rangle}

% Automorphism group
\newcommand{\aut}{\operatorname{Aut}}

% Permutation group
\newcommand{\perm}{\operatorname{Perm}}

% Galois group
\newcommand{\gal}{\operatorname{Gal}}

% Longer inclusion arrow
\newcommand{\inclusion}{\longhookrightarrow}

% Generated group/ideal
\newcommand{\zn}[1]{\bb{Z}/{{#1}}\bb{Z}}

% Identity
\newcommand{\id}{\operatorname{id}}

% Longer bidirectional stacked arrows
\newcommand{\correspondence}{\mathrel{\substack{\longrightarrow \\[-.5ex] \longleftarrow}}}

% Order
\newcommand{\ord}{\operatorname{ord}}

% Restriction
\newcommand{\littletaller}{\mathchoice{\vphantom{\big|}}{}{}{}}
\newcommand\restr[2]{{
  \left.\kern-\nulldelimiterspace
  {#1}
  \littletaller
  \right|_{#2}
}}

% Image
\newcommand{\im}{\operatorname{im}}
